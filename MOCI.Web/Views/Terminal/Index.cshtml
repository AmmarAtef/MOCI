@model IEnumerable<MOCI.Core.DTOs.TerminalDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" type="text/css" href="~/css/generalStyle.css" />
<div class="row mt-2 group">
    <div class="col-lg-10 col-md-10 col-sm-10 p-md-0"></div>
    <div class="col-lg-1 col-md-1 col-sm-1 p-md-0 ">
        <a asp-action="Create"  class="btn btn-primary">Create New</a>
    </div>
</div>
<section class="content">
    <div class="container-fluid">
       
        <div class="row table-main-container" style="width:100% !important">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.TerminalId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.MerchantId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Location)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Department)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Account)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.TerminalId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MerchantId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Location)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Department)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Account)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id"  class="btn btn-info"><i class="fa fa-edit"></i></a> |
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success"><i class="fa fa-eye"></i></a> |
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>


<script type="text/javascript" src="https://code.jquery.com/jquery-3.5.1.js"></script>


<link href="https://www.jqueryscript.net/css/jquerysctipttop.css" rel="stylesheet" type="text/css">
<link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/flick/jquery-ui.css">

<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.3/css/jquery.dataTables.min.css">





<script type="text/javascript" src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
<script type="text/javascript" src="https://cdn.datatables.net/responsive/2.2.9/js/dataTables.responsive.min.js"></script>
<script type="text/javascript" src="https://cdn.datatables.net/select/1.3.3/js/dataTables.select.min.js"></script>

<link rel="stylesheet" href="https://cdn.datatables.net/select/1.3.3/css/select.dataTables.min.css">

<script type="text/javascript">

    $(document).ready(function () {

        $('.table').DataTable({
            "iDisplayLength": 50,
        });
    });
    </script>