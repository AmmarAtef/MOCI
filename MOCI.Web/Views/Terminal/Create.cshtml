@model MOCI.Core.DTOs.TerminalDto

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="content">
    <div class="container-fluid">


      
        <div class="row p-4" style="background:white">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="TerminalId" class="control-label"></label>
                        <input asp-for="TerminalId" class="form-control" />
                        <span asp-validation-for="TerminalId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MerchantId" class="control-label"></label>
                        <input asp-for="MerchantId" class="form-control" />
                        <span asp-validation-for="MerchantId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Location" class="control-label"></label>
                        <input asp-for="Location" class="form-control" />
                        <span asp-validation-for="Location" class="text-danger"></span>
                    </div>


                    <div class="form-group">
                        <label>Department<span style="color:red;">*</span></label>

                        @Html.DropDownListFor(m => m.Department, new SelectList(ViewBag.Departments), "-- Select --", new { @class = "form-control" })

                        <span asp-validation-for="Department" class="text-danger"></span>
                    </div>


                    <div class="form-group">
                        <label>Account<span style="color:red;">*</span></label>

                        @Html.DropDownListFor(m => m.Account, new SelectList(ViewBag.Ledgers), "-- Select --", new { @class = "form-control" })

                        <span asp-validation-for="Account" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</section>